{% extends 'base.html.twig' %}

{% block title %}Latest News Headlines{% endblock %}
{% block body %}
    <div class="container my-5">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-primary">
                <tr>
                    <th style="width:115px;">Date</th>
                    <th>Headline</th>
                    <th style="width:120px;">Surprise Index</th>
                    <th style="width:120px;">Economy Impact</th>
                </tr>
                </thead>
                <tbody>
                {% for news in newsItems %}
                    <tr class="news-toggle" style="cursor:pointer" data-news-id="{{ news.id }}">
                        <td>{{ news.date|date('Y-m-d') }}</td>
                        <td class="fw-bold">{{ news.title }}</td>
                        <td>
                            {% if news.articleInfo %}
                                {{ news.articleInfo.newsSurpriseIndex ?? '-' }}
                            {% else %}
                                -
                            {% endif %}
                        </td>
                        <td>
                            {% if news.articleInfo %}
                                {{ news.articleInfo.economyImpact ?? '-' }}
                            {% else %}
                                -
                            {% endif %}
                        </td>
                    </tr>
                    <tr class="news-details-row" id="news-details-{{ news.id }}" style="display:none; background: #f8f9fa;">
                        <td colspan="4">
                            <div>
                                {# Article Info #}
                                {% if news.articleInfo %}
                                    <div class="mb-2">
<p>
                                        <a href="{{ news.link }}" target="_blank" rel="noopener" class="link-primary">
                                            View original article
                                        </a>
</p>

                                        <p>{{ news.articleInfo.summary }}</p>
                                        <strong>Heatmap:&nbsp;</strong>
{#                                        {% for word in news.articleInfo.macroKeywordHeatmap ?? [] %}#}
{#                                            <span class="badge bg-info text-dark me-1">{{ word }}</span>#}
{#                                        {% endfor %}#}
                                    </div>
                                {% endif %}

                                {# Market Analysis Table #}
                                {% if news.marketAnalyses|length > 0 %}
                                    <div class="table-responsive">
                                        <table class="table table-sm table-bordered mt-3" style="width:100%;">
                                            <thead class="table-light">
                                            <tr>
                                                <th style="width:8%;">Market</th>
                                                <th style="width:8%;">Sentiment</th>
                                                <th style="width:6%;">Magnitude</th>
                                                <th style="width:78%; min-width:300px;">Reason</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            {% for market in news.marketAnalyses %}
                                                <tr>
                                                    <td><span class="fw-bold">{{ market.market }}</span></td>
                                                    <td>
                                                    <span class="badge
                                                        {% if market.sentiment == 'Bullish' %}bg-success
                                                        {% elseif market.sentiment == 'Bearish' %}bg-danger
                                                        {% else %}bg-secondary{% endif %}">
                                                        {{ market.sentiment }}
                                                    </span>
                                                    </td>
                                                    <td>{{ market.magnitude }}</td>
                                                    <td style="max-width:300px">{{ market.reason }}</td>
{#                                                    <td>#}
{#                                                        {% for kw in market.keywords %}#}
{#                                                            <span class="badge bg-warning text-dark me-1">{{ kw }}</span>#}
{#                                                        {% endfor %}#}
{#                                                    </td>#}
{#                                                    <td>#}
{#                                                        {% for cat in market.categories %}#}
{#                                                            <span class="badge bg-info text-dark me-1">{{ cat }}</span>#}
{#                                                        {% endfor %}#}
{#                                                    </td>#}
                                                </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                {% endif %}
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr><td colspan="4" class="text-center">No news found.</td></tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script>
        $(function() {
            $('.news-toggle').on('click', function() {
                var id = $(this).data('news-id');
                // Optionally: close others
                $('.news-details-row').not('#news-details-' + id).hide();
                $('#news-details-' + id).toggle();
            });
        });
    </script>
{% endblock %}