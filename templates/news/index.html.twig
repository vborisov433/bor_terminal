{% extends 'base.html.twig' %}

{% block title %}BOR TERMINAL{% endblock %}
{% block body %}
    <div class="container my-5">

        <div class="">
            <span class="float-end">
                <button type="button" id="refresh-news-btn" class="btn btn-secondary btn-sm">
                <span class="refresh-spinner spinner-border spinner-border-sm text-primary me-2 d-none"
                      role="status" aria-hidden="true"></span>
                    <i class="bi bi-arrow-clockwise"></i> Refresh News
                </button>

                   <div class="mt-3">
                        <span class="badge bg-info text-dark float-end">
                            News: {{ total_news_count }} <br/>
                            <div class="mt-2">
                                <time class="timeago" datetime="{{ first_news_date|date('c') }}">
                                    {{ first_news_date|date('Y-m-d H:i') }}
                                </time>
                            </div>
                        </span>
                   </div>
            </span>
        </div>

        <div class="d-flex mb-4 align-items-end flex-wrap gap-2">

            <form method="get" class="row g-3 flex-grow-1">
                <div class="col-auto">
                    <label for="surprise_min" class="form-label mb-0">Surprise Index</label>
                    <input type="range" class="form-range" min="0" max="10" id="surprise_min"
                           name="surprise_min"
                           value="{{ surprise_min is not null ? surprise_min : 0 }}"
                           oninput="$('#surprise_min_value').text(this.value)">
                    <span id="surprise_min_value" class="badge bg-primary">
                {{ surprise_min is not null ? surprise_min : 0 }}
            </span>
                </div>
                <div class="col-auto">
                    <label for="impact_min" class="form-label mb-0">Economy Impact</label>
                    <input type="range" class="form-range" min="0" max="10" id="impact_min"
                           name="impact_min"
                           value="{{ impact_min is not null ? impact_min : 0 }}"
                           oninput="$('#impact_min_value').text(this.value)">
                    <span id="impact_min_value" class="badge bg-primary">
                {{ impact_min is not null ? impact_min : 0 }}
            </span>
                </div>
                <div class="col-auto align-self-end">
                    <button class="btn btn-primary" type="submit">Filter</button>
                    <a href="{{ path('app_news') }}" class="btn btn-outline-secondary">Reset</a>

                </div>
            </form>


        </div>


        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-primary">
                <tr>
                    <th></th>
                    <th>Headline</th>
                    <th class="text-center">Surprise<i class="icon1 bi bi-list-ol" aria-hidden="true"></i>
                    </th>
                    <th class="text-center">Economy <i class="icon1 bi bi-list-ol" aria-hidden="true"></i></th>
                </tr>
                </thead>
                <tbody>
                {% for news in pagination %}
                    <tr class="news-toggle" style="cursor:pointer" data-news-id="{{ news.id }}">
                        <td><span class="dot"></span></td>
                        <td>
                            <div title="{{ news.date|date('Y-m-d') }}">
                                <time class="timeago" datetime="{{ news.createdAt|date('c') }}">
                                    {{ news.createdAt|date('Y-m-d H:i') }}
                                </time>
                            </div>
                            <span class="headline {{ news.articleInfo is not defined or news.articleInfo is null or not news.articleInfo.hasMarketImpact ? 'text-muted' : 'fw-bold' }}">
    {{ news.title }}
</span>
                        </td>
                        <td class="text-center">
                            {% if news.articleInfo %}
                                {{ news.articleInfo.newsSurpriseIndex ?? '-' }}
                            {% else %}
                                -
                            {% endif %}
                        </td>
                        <td class="text-center">
                            {% if news.articleInfo %}
                                {{ news.articleInfo.economyImpact ?? '-' }}
                            {% else %}
                                -
                            {% endif %}
                        </td>
                    </tr>
                    <tr class="news-details-row" id="news-details-{{ news.id }}"
                        style="display:none; background: #f8f9fa;">
                        <td colspan="4">
                            <div>
                                {# Article Info #}
                                {% if news.articleInfo %}
                                    <div class="mb-2">
                                        <p>
                                            <a href="{{ news.link }}" target="_blank" rel="noopener"
                                               class="link-primary d-inline-flex align-items-center orig-article-link">
                                                <i class="bi bi-box-arrow-up-right me-1"></i> View original article
                                            </a>
                                        </p>
                                        <p class="summary d-flex justify-content-between align-items-start">
                                            <span id="tts-summary-{{ news.id }}">{{ news.articleInfo.summary }}</span>
                                            <button onclick="speakText('tts-summary-{{ news.id }}')"
                                                    class="btn btn-sm btn-outline-secondary ms-2 btn-speaker">
                                                <i class="bi bi-volume-up"></i>
                                            </button>
                                        </p>
                                        <strong>Heatmap:&nbsp;</strong>
                                        {#                                        {% for word in news.articleInfo.macroKeywordHeatmap ?? [] %} #}
                                        {#                                            <span class="badge bg-info text-dark me-1">{{ word }}</span> #}
                                        {#                                        {% endfor %} #}
                                    </div>
                                {% endif %}

                                {# Market Analysis Table #}
                                {% if news.marketAnalyses|length > 0 %}
                                    <div class="table-responsive">
                                        <table class="table table-sm table-bordered mt-3" style="width:100%;">
                                            <thead class="table-light">
                                            <tr>
                                                <th style="width: 155px;">Market</th>
                                                <th>Sentiment</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            {% for market in news.marketAnalyses %}
                                                <tr>
                                                    <td rowspan="2" class="summary align-middle text-uppercase">
                                                        <div class="">
                                                            {% if market.magnitude > 4 %}
                                                                <span class="magnitude-span" title="Magnitude">
                                                                <i class="bi bi-graph-up"></i>
                                                                <span> {{ market.magnitude }}</span>
                                                            </span>
                                                                <br/>
                                                            {% endif %}

                                                            <span class="market-label">{{ market.market }}</span>

                                                            {% if market.sentiment != 'Neutral' %}
                                                                <span class="sentiment badge me-2
                                                                    {% if market.sentiment == 'Bullish' %}bg-success
                                                                    {% elseif market.sentiment == 'Bearish' %}bg-danger
                                                                    {% else %}bg-secondary{% endif %}">
                                                                    {{ market.sentiment }}
                                                                    </span>
                                                            {% endif %}

                                                        </div>
                                                    </td>


                                                    {#                                                    <td> #}
                                                    {#                                                        {% for kw in market.keywords %} #}
                                                    {#                                                            <span class="badge bg-warning text-dark me-1">{{ kw }}</span> #}
                                                    {#                                                        {% endfor %} #}
                                                    {#                                                    </td> #}
                                                    {#                                                    <td> #}
                                                    {#                                                        {% for cat in market.categories %} #}
                                                    {#                                                            <span class="badge bg-info text-dark me-1">{{ cat }}</span> #}
                                                    {#                                                        {% endfor %} #}
                                                    {#                                                    </td> #}
                                                </tr>
                                                <tr>
                                                    {#                                                    <td class="market-reason" colspan="2">{{ market.reason }}</td> #}

                                                    <td class="summary d-flex justify-content-between align-items-start"
                                                        colspan="2">
                                                        <span id="tts-reason-{{ loop.index }}-{{ market.id }}">{{ market.reason }}</span>
                                                        <button onclick="speakText('tts-reason-{{ loop.index }}-{{ market.id }}')"
                                                                class="btn btn-sm btn-outline-secondary ms-2 btn-speaker">
                                                            <i class="bi bi-volume-up"></i></button>
                                                    </td>

                                                </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                {% endif %}
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center">No news found.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        {{ knp_pagination_render(pagination, '@KnpPaginator/Pagination/bootstrap_v5_pagination.html.twig') }}

    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>

        let currentUtterance = null;

        function speakText(elementId) {
            const synth = window.speechSynthesis;

            // If already speaking, stop and reset
            if (synth.speaking || synth.pending) {
                synth.cancel();
                currentUtterance = null;
                return;
            }

            const element = document.getElementById(elementId);
            if (!element) return;

            const text = element.textContent || element.innerText;
            const utterance = new SpeechSynthesisUtterance(text);
            utterance.lang = 'en-US';

            currentUtterance = utterance;
            synth.speak(utterance);
        }

        $(function () {
            $('.news-toggle').on('click', function () {
                var id = $(this).data('news-id');
                // Optionally: close others
                $('.news-details-row').not('#news-details-' + id).hide();
                $('#news-details-' + id).toggle();
            });

            timeago.render(document.querySelectorAll('.timeago'));

            $('#refresh-news-btn').on('click', function (e) {
                e.preventDefault();
                var $btn = $(this);
                var $spinner = $btn.find('.refresh-spinner');
                var $icon = $btn.find('.bi-arrow-clockwise');

                $spinner.removeClass('d-none');     // Show spinner
                $icon.addClass('d-none');           // Hide refresh icon
                $btn.attr('disabled', true);

                $.ajax({
                    url: "{{ path('app_news_refresh') }}",
                    type: 'POST',
                    headers: {'X-Requested-With': 'XMLHttpRequest'},
                    success: function (response) {
                        setTimeout(() => {
                            location.reload(); // reload after success
                        }, 2000);
                    },
                    error: function () {
                        $spinner.addClass('d-none');    // Hide spinner on error
                        $icon.removeClass('d-none');    // Show icon again
                        $btn.attr('disabled', false);
                        alert('Failed to refresh news. Please try again.');
                    }
                });
            });

            $('.pagination .page-link').each(function () {
                const text = $(this).text().trim();
                if (text.includes('Previous')) {
                    $(this).html('«');
                } else if (text.includes('Next')) {
                    $(this).html('»');
                }
            });

            $(document).on('keydown', function (e) {
                if (e.key.toLowerCase() === 'r') {
                    // Prevent browser's default refresh (Ctrl+R/F5)
                    e.preventDefault();
                    location.href = window.location.pathname + window.location.search;
                }
                if (e.key.toLowerCase() === 's') {
                    e.preventDefault();
                    window.location.href = "{{ path('api_news_market_summary') }}";
                }
            });
        });
    </script>
{% endblock %}